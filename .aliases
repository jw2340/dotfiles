# ----------------------
# Aliases
# ----------------------

# runs task-minder.sh on a command to say done or error
alias mind="sh $HOME/task-minder.sh"

alias -s txt=textedit

alias -g G="| grep"

alias h=history

# Docker
alias dc=docker-compose

# Git
alias glom='git pull origin master'
alias gcbom=git_checkout_branch_from_origin_master
alias grsh='git reset --soft HEAD@{1}'
alias glog="git log --all --pretty='format:%d %Cgreen%h%Creset %an - %s' --graph" # from https://coderwall.com/p/syqplg/glog-a-git-log-alias-for-a-decent-view-of-your-repo

# Terragrunt
alias tg=terragrunt

# K8s
alias k=kubectl

